<Window x:Class="WPF_PASSWORD_BOX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_PASSWORD_BOX"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label>Username</Label>
        <TextBox Name="tbUsername"></TextBox>
        <Label>Password</Label>
        <PasswordBox MaxLength="10" PasswordChar="*"></PasswordBox>
        <Button Margin="5" Content="Login" Click="Button_Click" />
    </StackPanel>
</Window>
